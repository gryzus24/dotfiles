#!/bin/dash

set -eu

get_tree() {
    swaymsg -t get_tree | jq -r '.. | select(.pid? and .visible?)'
}

tree_select_rect() {
    local tree="$1"
    printf %s "$tree" \
    | jq -r '.rect | "\(.x),\(.y) \(.width)x\(.height)"' \
    | slurp
}

tree_props_of_rect() {
    local tree="$1"
    local rect="$2"
    local x; local y; local w; local h

    IFS=', x' read -r x y w h <<EOF
        $rect
EOF
    printf %s "$tree" \
    | jq -r "select(
        .rect.x == $x
        and .rect.y == $y
        and .rect.width == $w
        and .rect.height == $h)"
}

TREE="$(get_tree)"

ARG="${1-all}"
case "$ARG" in
    rect)
        tree_select_rect "$TREE"
        ;;
    all)
        RECT="$(tree_select_rect "$TREE")"
        tree_props_of_rect "$TREE" "$RECT"
        ;;
    *)
        RECT="$(tree_select_rect "$TREE")"
        tree_props_of_rect "$TREE" "$RECT" | jq -r ".$ARG"
        ;;
esac
