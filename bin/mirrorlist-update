#!/bin/dash

if [ "$(id -u)" -ne 0 ]; then
	echo "$(basename "$0"): must be root"
	exit 1
fi

rm -f /etc/pacman.d/mirrorlist.pacnew
mv /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist.bak

reflector \
	--country PL,DE,CZ,SK,GB,FR \
	--latest 6 \
	--sort rate \
	--protocol https \
	--save /etc/pacman.d/mirrorlist

# vim: ts=4:sw=4:noet
