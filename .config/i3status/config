# i3status configuration file.
# see "man i3status" for documentation.

general {
	colors = true
	color_good = "#4c99bb"
	interval = 5
	output_format = i3bar
}

order += "wireless wlp2s0"
order += "ethernet _first_"
order += "volume master"
order += "cpu_usage"
order += "memory"
order += "battery 1"
order += "tztime local"

wireless wlp2s0 {
	format_up = "W: (%quality ~ %bitrate) %ip"
	format_down = "W: down"
}

ethernet _first_ {
	format_up = "E: %ip"
	format_down = "E: down"
}

volume master {
	format = "♪: %volume"
	format_muted = "♪: muted (%volume)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

cpu_usage {
	format = "CPU: %usage"
	degraded_threshold = 60
	max_threshold = 80
}

memory {
	format = "%used : %available"
	format_degraded = "%used : %available"
	threshold_degraded = "4G"
}

battery 1 {
	format = "%status  %percentage  %remaining"
	format_down = "NO BATTERY"
	status_chr = "CHR"
	status_bat = ""
	status_unk = "??? "
	status_full = "FULL"
	threshold_type = "time"
	low_threshold = 30
	path = "/sys/class/power_supply/BAT%d/uevent"
}

tztime local {
	format = "%A  %d.%m ~ %H:%M "
}
